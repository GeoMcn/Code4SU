<div class="row">
  <div class="col m6 offset-m3 center">
    <h2>Change your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "shared/devisemes" %>
      <%= f.hidden_field :reset_password_token %>

      <div class="input-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "off" %>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">Send me reset password instructions</button>
      <% end %>
    </div>
</div>